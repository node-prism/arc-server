{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "declaration": true,
    "declarationDir": "./types",
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "./types"
  ],
  "include": [
    "./src"
  ]
}